<robot name="pendulum">

    <link name="world"/>

    <joint name="world_to_base" type="fixed">
        <parent link="world"/>
        <child link="base"/>
        <origin xyz="0 0 2" rpy="0 0 0"/>
    </joint>

    <link name="base">
        <visual>
            <geometry>
                <sphere radius="0.05"/>   
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <joint name="j1" type="revolute">
        <parent link="base"/>
        <child link="axe"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit effort="0" velocity="0"/>
        <dynamics damping="0" friction="0"/>
    </joint>

    <link name="axe">
        <visual>
            <geometry>
                <cylinder radius="0.005" length="0.5"/>
            </geometry>
            <origin xyz="0 0 -0.25" rpy="0 0 0"/>
            <material name="gray"/>
        </visual>
        <inertial>
            <mass value="0"/>
            <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>  
        </inertial>
    </link>

    <joint name="j2" type="fixed">
        <parent link="axe"/>
        <child link="eef"/>
        <origin xyz="0 0 -0.5" rpy="0 0 0"/>
    </joint>

    <link name="eef">
        <visual>
            <geometry>
                <sphere radius="0.03"/>   
            </geometry>
            <material name="black"/>
        </visual>
        <inertial>
            <mass value="1"/>
            <inertia ixx="0" iyy="0" izz="0" ixy="0" ixz="0" iyz="0"/>  
        </inertial>
    </link>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="gray">
        <color rgba="0.6 0.6 0.6 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

</robot>
