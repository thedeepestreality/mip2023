<robot name="pendulum">

    <link name="world"/>

    <link name="base">
        <visual>
            <geometry>
                <sphere radius="0.1"/>   
            </geometry>
        </visual>
    </link>

    <joint name="world_to_base" type="fixed">
        <parent link="world"/>
        <child link="base"/>
        <origin xyz="0 0 1" rpy="0 0 0"/>
    </joint>

</robot>
